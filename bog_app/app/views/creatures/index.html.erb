<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <ul class="nav navbar-nav">
      <li><%= link_to "Home", creatures_path %></li>
      <li><%= link_to "Create New Creature", new_creature_path %></li>
    </ul>
  </div>
</nav>

<div class="container-fluid col-md-8 col-md-offset-2">
  <h1>Creature Index page</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Description</th>
          <th>Link</th>
        </tr>
      </thead>
      <tbody>
        <% @creatures.each do |creature| %>
          <tr>
            <td><%= creature.id %></td>
            <td><%= creature.name %></td>
            <td><%= creature.description %></td>
            <td><%= link_to "Show Creature", creature_path(creature) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
